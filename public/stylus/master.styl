$bgcolor = #19bc9c
$basecolor = #2c3e50
$basewhite = #eff3f3
$udncolor = #ee5103


body
  background $bgcolor
  font-family Meiryo, "微軟正黑體", "Microsoft JhengHei"
  margin 0
  padding-bottom 30px
  min-height 800px
  position relative
  transition width 2s
  background-image linear-gradient(top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0) 90%, rgba(255, 255, 255, 0.95) 100%)
  color $basecolor
header
  background-color $basewhite
  height 40%
  text-align center
  margin-bottom 30px
  h1
    border-bottom-right-radius: 4em;
    padding 1% 7% 1% 6%
    background-color $basecolor
    color white
    display inline-block
    float left
    span
      font-family Helvatica, Arial
      padding-left 5px
      font-size .7em
      @media(max-width: 600px)
        padding-left 0
      .udn
        color $udncolor
        font-size 1.8em
    @media(max-width: 600px)
      font-size 1.5em
  #date
    float right
    padding .5% 3%
    background-color $udncolor
    color white
  h2
    clear both
    margin 0 auto
    font-size 2.5em
    padding-bottom 1%
    width 55%
    border-bottom 1px #d2dddd solid
    @media(max-width: 590px)
      font-size 2em
  p
    margin 10px 30px 0 30px
    width 55%
  h3
    margin-bottom 20px
    color $udncolor
    -webkit-text-fill-color $udncolor
    -webkit-text-stroke-width .1px
    -webkit-text-stroke-color $basecolor

ul
  -webkit-padding-start 20px

table
  border-color transparent
  border 0
  border-spacing 0

footer
  font-family sans-serif
  position absolute
  bottom 0
  color #fff
  margin 0 auto
  width 100%
  padding 10px
  text-align center
  background-color $basecolor
  font-weight bold
  text-transform uppercase
  font-size 10px
  border-top 1px #BFBBAE solid
  border-bottom 1px #BFBBAE solid
  a
    &:link
      color #BFBBAE
      text-decoration none
      text-transform lowercase

.curl
  width 30px
  height 30px
  position absolute
  left 0
  right 0
  background linear-gradient(135deg, #fff, #f3f3f3 45%, #ddd 50%, #aaa 50%, #bbb 56%, #ccc 62%, #f3f3f3 80%,#fff 100%)
  box-shadow 0 0 10px rgba(0, 0, 0, .5)
  @media (max-width 600px)
    width 15px
    height 15px
  @media (min-width 1220px)
    width 40px
    height 40px
  &:before
  &:after
    content ''
    position absolute
    z-index -1
    left 12.5%
    bottom 5.8%
    width 70%
    max-width 300px
    max-height 100px
    height 55%
    box-shadow 0 12px 15px rgba(0, 0, 0, .3)
    transform skew(-10deg) rotate(-6deg)

.container
  h1
  h2
    margin-top 0
    text-align center
    font-family "Yu Gothic", SimHei

.rwd-table
  width 70%
  margin 0 auto
  overflow hidden
  padding-bottom 20px
  @media (max-width 376px)
    font-size .7em
  @media (max-width 600px)
    font-size .9em
  @media (min-width 1200px)
    font-size 1.1em
  th
    border-bottom 3px solid red
  th
  td
    margin 0.5em 1em
    padding 0.5em .8em
    text-align left

  tr
    background-color $basewhite
    &:nth-child(even)
      background-color #fff
    th
    td:before
      border-bottom 3px solid darken($basewhite, 20%)
      background-color $basecolor
      color $basewhite
  td
    &:first-child
      width 25%

  .details
    border-top 5px solid $basecolor
    background-image -webkit-linear-gradient(hsla(0,0%,100%,.025))
    -webkit-box-shadow -16px 10px 18px -6px rgba(0, 0, 0, 0.58)
    -moz-box-shadow -16px 10px 18px -6px rgba(0, 0, 0, 0.58)
    box-shadow -16px 10px 18px -6px rgba(0, 0, 0, 0.58)
    padding 20px
    background-color $basewhite
    border-right 10px solid $bgcolor
    text-align center
    .btn
      font-size .7em
    ul
      -webkit-padding-start 0
      margin-right 15px
    li
      display inline-block

.btn
  color #fff
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
  display inline-block
  text-decoration none
  font-weight 200
  text-align center
  vertical-align middle
  padding 0.5em .9em
  -webkit-box-shadow inset 0 1px 0 rgba(255, 255, 255, .1), 0 1px 5px rgba(0, 0, 0, .25)
  -moz-box-shadow inset 0 1px 0 rgba(255, 255, 255, .1), 0 1px 5px rgba(0, 0, 0, .25)
  box-shadow inset 0 1px 0 rgba(255, 255, 255, .1), 0 1px 5px rgba(0, 0, 0, .25)
  transition .5s opacity ease

a
  &.btn
    &:hover
      opacity .5

.fa
  padding-right 10px

.finish
  background-color #5cb85c
  border-color #4cae4c

.in-progress
  background-color #f0ad4e
  border-color #eea236

.error
  background-color #d9534f
  border-color #d43f3a

.waiting
  background-color #5bc0de
  border-color #46b8da
